<div class="row">

    <div id="page-title">
        <div class="col-xs-6">
            <h2 class="pull-left">Channels</h2>

        </div>
        <div class="col-xs-3">
            <span>Showing {[{currentPage && (((currentPage-1)*itemsPerPage)+' - '+(currentPage)*itemsPerPage)}]} of {[{totalItems}]}</span>
        </div>
        <div class="col-xs-3">
            <div class="form-group pull-right">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                    <input type="text" class="form-control" ng-model="searchFish" placeholder="Search">
                </div>
            </div>
        </div>
    </div>


    <div class="col-xs-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                <tr>
                    <th>Title</th>
                    <th>Region</th>
                    <th>Icon</th>

                    <th>Created At</th>

                    <th>Updated at</th>

                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="item in items">
                    <td>{[{item.title }]}</td>
                    <td>{[{item.region}]}</td>
                    <td><img ng-if="item.img" ng-src="{[{item.img}]}" alt="channel_logo" width="40"></td>

                    <td>{[{item.createdAt | date:"MM/dd/yyyy 'at' h:mma"}]}</td>
                    <td>{[{item.updatedAt | date:"MM/dd/yyyy 'at' h:mma"}]}</td>

                    <td>
                        <button type="button" ng-click="editItem(item)" class="btn btn-success btn-circle">
                            <i class="fa fa-pencil-square-o"></i>
                        </button>

                        <button type="button" class="btn btn-danger " ng-click="deleteChannel(item)">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>


                    </td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>
    <div class="col-xs-12">
        <uib-pagination direction-links="false" boundary-links="true" total-items="totalItems"
                        ng-model="currentPage"></uib-pagination>
    </div>

</div>


<script type="text/ng-template" id="editChannel.html">
    <div class="modal-header">
        <button type="button" class="close" data-ng-click="cancel()" aria-hidden="true">Ã—</button>
        <h3 class="modal-title text-center">Channel editing</h3>
    </div>
    <div class="modal-body">

        <div class="row">

            <div class="col-xs-4">
                <div class="form-group ">
                    <label for="">Title</label>
                    <input type="text" ng-model="item.title" class="form-control">

                </div>
            </div>
            <div class="col-xs-4">
                <div class="form-group ">
                    <label for="">Image url</label>
                    <input type="text" ng-model="item.img" class="form-control">

                </div>
            </div>
            <div class="col-xs-4">
                <div style="padding: 10px;"><img ng-if="item.img" ng-src="{[{item.img}]}" width="40" alt="channel_logo">
                </div>

            </div>
            <div class="col-xs-6">
                <form name="myForm">
                    <div class="form-group ">
                        <label for="">Channel Image</label>

                        <input type="file" ngf-select
                               ngf-change="upload($files, $file, $newFiles, $duplicateFiles, $invalidFiles, $event)"
                               ng-model="picFile" name="file" ngf-accept="'image/*'">


                    </div>

                </form>
            </div>


        </div>

    </div>
    <div class="modal-footer">

        <button type="button" ng-hide="mode==='add'" class="btn btn-primary" data-ng-click="ok()">Save changes</button>
        <button type="button" class="btn btn-default" data-ng-click="cancel()">Cancel</button>

    </div>
</script>
