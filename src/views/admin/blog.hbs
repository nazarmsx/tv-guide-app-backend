<div class="row">
    <div id="page-title">
        <h2>Blog</h2>
    </div>


    <div class="col-xs-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Link</th>
                    <th>Views</th>
                    <th>Actions</th>

                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="item in items">

                    <td ng-click="editItem(item)">{[{item.id}]}</td>
                    <td ng-click="editItem(item)">{[{item.title}]}</td>
                    <td ng-click="editItem(item)"><a href="/blog-post/{[{item.link}]}"> LINK</a></td>
                    <td ng-click="editItem(item)">{[{item.views}]}</td>
                    <td>
                        <button type="button" ng-click="editItem(item)" title="Edit assest"
                                class="btn btn-success btn-circle">
                            <i class="fa fa-pencil-square-o"></i>
                        </button>
                        <button type="button" class="btn btn-danger btn-circle" title="Remove blog post"
                                ng-click="deleteItem(item.id)">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>
                    </td>

                </tr>

                </tbody>
            </table>
        </div>
    </div>
    <div class="col-xs-12">
        <uib-pagination direction-links="false" boundary-links="true" total-items="totalItems"
                        ng-model="currentPage"></uib-pagination>
    </div>
    <!-- /.col-lg-12 -->
</div>


<div class="row">
    <div class="col-xs-12">
        <h2 class="text-center"> Blog item</h2>
    </div>
    <div class="col-xs-6">
        <div class="form-group">

            <label class="control-label " for="inputSuccess">Title </label>


            <input name="name" ng-model="item.title" type="text" ng-required="true"
                   placeholder="Title" class="form-control">

        </div>
    </div>

    <div class="col-xs-6">
        <div class="form-group">

            <label class="control-label " for="inputSuccess">Author</label>


            <input name="name" ng-model="item.author" type="text" ng-required="true"
                   placeholder="Author" class="form-control">

        </div>
    </div>

    <div class="col-xs-12">

        <trix-editor angular-trix name="description" ng-minlength="10" required
                     data-ng-model="item.text"></trix-editor>


    </div>
</div>

<div class="row" style="margin-top:20px;">
    <div class="col-xs-6 pull-right">
        <button class="btn btn-success" ng-hide="item.id" ng-click="add()"><i class="fa fa-plus"> </i> Add</button>
        <button class="btn btn-success" ng-show="item.id" ng-click="save()"><i class="fa fa-floppy-o"
                                                                               aria-hidden="true"></i> Save changes
        </button>
        <button class="btn btn-danger" ng-show="item.id" ng-click="cancel()"><i class="fa fa-long-arrow-up"
                                                                                aria-hidden="true"></i> Cancel
        </button>

    </div>
</div>
