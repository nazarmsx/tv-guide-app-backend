<div class="row">

    <div id="page-title">
        <div class="col-xs-6">
            <h2 class="pull-left">Actors management </h2>

        </div>
        <div class="col-xs-3">
            <span>Showing {[{currentPage && (((currentPage-1)*itemsPerPage)+' - '+(currentPage)*itemsPerPage)}]} of {[{totalItems}]}</span>
        </div>
        <div class="col-xs-3">
            <div class="form-group pull-right">


                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-search" aria-hidden="true"></i></span>
                    <input type="text" class="form-control" ng-model="searchFish" placeholder="Search">
                </div>

            </div>
        </div>

    </div>


    <div class="col-xs-12">
        <div class="table-responsive">
            <table class="table table-bordered table-hover table-striped">
                <thead>
                <tr>
                    <th ng-click="sortType = 'id'; sortReverse = !sortReverse">
                        ID
                        <span ng-show="sortType == 'id' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'id' && sortReverse" class="fa fa-caret-up"></span>
                    </th>
                    <th ng-click="sortType = 'login'; sortReverse = !sortReverse">
                        Name
                        <span ng-show="sortType == 'login' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'login' && sortReverse" class="fa fa-caret-up"></span>
                    </th>
                    <th>Profile photo</th>

                    <th>Popularity</th>

                    <th ng-click="sortType = 'mail'; sortReverse = !sortReverse">
                        TMDB ID
                        <span ng-show="sortType == 'mail' && !sortReverse" class="fa fa-caret-down"></span>
                        <span ng-show="sortType == 'mail' && sortReverse" class="fa fa-caret-up"></span>
                    </th>

                    <th>Created At</th>

                    <th>Updated At</th>

                    <th>Action</th>
                </tr>
                </thead>
                <tbody>
                <tr ng-repeat="item in items">
                    <td>{[{item._id }]}</td>
                    <td>{[{item.name }]}</td>
                    <td style="padding: 2px" class="text-center"><img
                            ng-src="{[{item.translations && item.translations.en && item.translations.en.profile_path}]}"
                            width="40" alt=""></td>

                    <td>{[{item.popularity}]}</td>

                    <td>{[{item.tmdb_id}]}</td>

                    <td>{[{item.createdAt | date:"MM/dd/yyyy 'at' h:mma"}]}</td>
                    <td>{[{item.updatedAt | date:"MM/dd/yyyy 'at' h:mma"}]}</td>

                    <td>
                        <button type="button" ng-click="editItem(item)" class="btn btn-success btn-circle">
                            <i class="fa fa-pencil-square-o"></i>
                        </button>

                        <button type="button" class="btn btn-danger ">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </button>


                    </td>
                </tr>

                </tbody>
            </table>
        </div>
    </div>
    <div class="col-xs-12">
        <uib-pagination rotate="false" max-size="10" total-items="totalItems" force-ellipses="true"
                        ng-model="currentPage"></uib-pagination>

    </div>
    <!-- /.col-lg-12 -->
</div>


<script type="text/ng-template" id="editActor.html">


    <div class="modal-header">
        <button type="button" class="close" data-ng-click="cancel()" aria-hidden="true">Ã—</button>
        <h3 class="modal-title text-center">Actor editing</h3>
    </div>
    <div class="modal-body">


        <div class="row" ng-repeat="(key, value) in item.translations track by  key">

            <div class="col-xs-4">
                <div class="form-group ">
                    <label for="">Name - {[{key}]}</label>
                    <input type="text" ng-model="item.translations[key].name" class="form-control">

                </div>
            </div>
            <div class="col-xs-8">
                <div class="form-group ">
                    <label for="biography-{[{key}]}">Biography - {[{key}]}</label>
                    <textarea id="biography-{[{key}]}" rows="5" ng-model="item.translations[key].biography"
                              class="form-control"></textarea>

                </div>
            </div>


        </div>

    </div>
    <div class="modal-footer">
        <button type="button" ng-show="mode==='add'" class="btn btn-primary" data-ng-click="ok()">Add question</button>

        <button type="button" ng-hide="mode==='add'" class="btn btn-primary" data-ng-click="ok()">Save Changes</button>
        <button type="button" class="btn btn-default" data-ng-click="cancel()">Cancel</button>

    </div>
</script>
